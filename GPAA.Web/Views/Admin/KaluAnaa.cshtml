@model GPAA.Web.ViewModels.Admin.KaluAnaaViewModel
@{
    ViewBag.Title = "Kalu Anaa";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="mainbar" dir="rtl">

    <!-- Page heading -->
    <div class="page-head">
        <h2 class="pull-right">Kalu Anaa</h2>

        <div class="clearfix"></div>


        <div class="clearfix"></div>

    </div>
    <!-- Page heading ends -->
    <!-- Matter -->

    <div class="matter">
        <div class="container">
            <!-- Dashboard Graph starts -->
            <div class="row">
                <div class="col-md-12">
                    <div class="widget">
                        <div class="widget-head">
                            <div class="pull-right">Kalu Anaa Add/Update</div>
                            <div class="widget-icons pull-left">
                                <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a>

                                <a href="#" class="wclose"><i class="fa fa-times"></i></a>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="widget-content">
                            <div class="padd">
                                <!-- Form starts.  -->
                                @using (Html.BeginForm("KaluAnaa", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form"}))
                                {
                                    @Html.ValidationSummary(true)
                                    @Html.HiddenFor(model => model.Id)
                                    <div class="form-group">
                                        <div class="col-lg-10">
                                            @Html.TextBoxFor(model => model.TitleA,  new { @placeholder = "عنوان", @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.TitleE, String.Empty, new { @class = "Error" })
                                        </div>
                                        <label class="col-lg-2 control-label textAlignLeft">عنوان</label>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-lg-10">
                                            @Html.TextBoxFor(model => model.TitleE, new { placeholder = "Title", @class = "ltr form-control" })
                                            @Html.ValidationMessageFor(model => model.TitleE, String.Empty, new { @class = "Error" })
                                        </div>
                                        <label class="col-lg-2 control-label textAlignLeft">Title</label>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-lg-10">
                                            @Html.TextBoxFor(model => model.VideoUrl,  new { placeholder = "Video URL", @class = "ltr form-control"  })
                                            @Html.ValidationMessageFor(model => model.VideoUrl, String.Empty, new { @class = "Error" })
                                        </div>
                                        <label class="col-lg-2 control-label textAlignLeft">Video Url</label>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-lg-10">
                                            @Html.CheckBoxFor(model => model.IsSelected)
                                            @Html.ValidationMessageFor(model => model.IsSelected, String.Empty, new { @class = "Error" })
                                        </div>
                                        <label class="col-lg-2 control-label textAlignLeft">Is Selected</label>
                                    </div>
                                    <hr />
                                    <div class="form-group">

                                        <a href="/Admin/KaluAnaaLV">
                                            <div class="col-lg-6">
                                                <button id="signupuser" type="button" class="btn btn-primary btn-block FontSize16">Cancel</button>
                                            </div>
                                        </a>
                                        <div class="col-lg-6">
                                            <button id="signupuser" type="submit" class="btn btn-success btn-block FontSize16">حفظ</button>
                                        </div>
                                    </div>
                                }

                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
    <!-- Matter ends -->
</div>