@model TMD.Web.Models.General
@{
    ViewBag.Title = "General";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="mainbar" dir="rtl">

    <!-- Page heading -->
    <div class="page-head">
        <h2 class="pull-right">General</h2>

        <div class="clearfix"></div>


        <div class="clearfix"></div>

    </div>
    <!-- Page heading ends -->
    <!-- Matter -->

    <div class="matter">
        <div class="container">
            <!-- Dashboard Graph starts -->
            <div class="row">
                <div class="col-md-12">
                    <div class="widget">
                        <div class="widget-head">
                            <div class="pull-right">Update Generals</div>
                            <div class="widget-icons pull-left">
                                <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a>

                                <a href="#" class="wclose"><i class="fa fa-times"></i></a>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="widget-content">
                            <div class="padd">
                                <!-- Form starts.  -->
                                @using (Html.BeginForm("GeneralAddEdit", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                {
                                    @Html.ValidationSummary(true)
                                    @Html.HiddenFor(m=>m.Id)
                                    @Html.HiddenFor(m=>m.Key)
                                            <div class="form-group" style="margin-right: 0;">
                                                <div class="col-lg-10">
                                                    @Html.TextBoxFor(m => m.TitleA, new { @id = "TitleA", name = "TitleA", @readonly = "readonly", @style = "border: none;" })
                                                </div>
                                                <label class="col-lg-2 control-label textAlignLeft">عنوان</label>
                                            </div>
                                            <div class="form-group" style="margin-right: 0;">
                                                <div class="col-lg-10">
                                                    @Html.TextBoxFor(m => m.TitleE, new { @id = "TitleE", name = "TitleE", @readonly = "readonly", @style = "border: none;" })
                                                </div>
                                                <label class="col-lg-2 control-label textAlignLeft">Title</label>
                                            </div>
                                            <div class="form-group" style="margin-right: 0;">
                                                <div class="col-lg-10">
                                                    @Html.TextAreaFor(m => m.DescriptionA, new { @id = "DescriptionA", name = "DescriptionA" })
                                                </div>
                                                <label class="col-lg-2 control-label textAlignLeft">وصف</label>
                                            </div>
                                            <div class="form-group" style="margin-right: 0;">
                                                <div class="col-lg-10">
                                                    @Html.TextAreaFor(m => m.DescriptionE, new { @id = "DescriptionE", name = "DescriptionE" })
                                                </div>
                                                <label class="col-lg-2 control-label textAlignLeft">Description</label>
                                            </div>
                                    <hr />
                                    <div class="form-group">

                                        <a href="/Admin/GeneralAddEditLV">
                                            <div class="col-lg-6">
                                                <button id="signupuser" type="button" class="btn btn-primary btn-block FontSize16">Cancel</button>
                                            </div>
                                        </a>
                                        <div class="col-lg-6">
                                            <button id="signupuser" type="submit" class="btn btn-success btn-block FontSize16">حفظ</button>
                                        </div>
                                    </div>
                                }

                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
    <!-- Matter ends -->

</div>
<script src="~/RichTextEditor/ckeditor.js"></script>

<script>
    //CKEDITOR.inline('Employee_Bio');//inline editing
    CKEDITOR.replace('DescriptionA');
    CKEDITOR.replace('DescriptionE');
</script>