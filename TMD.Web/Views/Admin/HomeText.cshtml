@model TMD.Web.ViewModels.Admin.HomeTextViewModel
@{
    ViewBag.Title = "Home Text";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="mainbar" dir="rtl">

    <!-- Page heading -->
    <div class="page-head">
        <h2 class="pull-right">Home Text</h2>

        <div class="clearfix"></div>


        <div class="clearfix"></div>

    </div>
    <!-- Page heading ends -->
    <!-- Matter -->

    <div class="matter">
        <div class="container">
            <!-- Dashboard Graph starts -->
            <div class="row">
                <div class="col-md-12">
                    <div class="widget">
                        <div class="widget-head">
                            <div class="pull-right">Home Text Add/Update</div>
                            <div class="widget-icons pull-left">
                                <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a>

                                <a href="#" class="wclose"><i class="fa fa-times"></i></a>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="widget-content">
                            <div class="padd">
                                <!-- Form starts.  -->
                                @using (Html.BeginForm("HomeText", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
                                {
                                    @Html.ValidationSummary(true)
                                    @Html.HiddenFor(model => model.Id)
                                    <div class="form-group">
                                        <div class="col-lg-10">
                                            @Html.TextBoxFor(model => model.TitleA, new { @class = "form-control", @placeholder = "عنوان" })
                                            @Html.ValidationMessageFor(model => model.TitleA, String.Empty, new { @class = "Error" })
                                        </div>
                                        <label class="col-lg-2 control-label textAlignLeft">عنوان</label>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-lg-10">
                                            @Html.TextBoxFor(model => model.TitleE, new { @class = "form-control", placeholder = "Title"})
                                            @Html.ValidationMessageFor(model => model.TitleE, String.Empty, new { @class = "Error" })
                                        </div>
                                        <label class="col-lg-2 control-label textAlignLeft">Title</label>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-lg-10">
                                            @Html.TextAreaFor(model => model.DescriptionA)
                                            @Html.ValidationMessageFor(model => model.DescriptionA, String.Empty, new { @class = "Error" })
                                        </div>
                                        <label class="col-lg-2 control-label textAlignLeft">الوصف</label>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-lg-10">
                                            @Html.TextAreaFor(model => model.DescriptionE, new { htmlAttributes = new { placeholder = "Comment", @class = "ltr" } })
                                            @Html.ValidationMessageFor(model => model.DescriptionE, String.Empty, new { @class = "Error" })
                                        </div>
                                        <label class="col-lg-2 control-label textAlignLeft">Description</label>
                                    </div>
                                    <hr />
                                    <div class="form-group">

                                        <a href="/Admin/HomeText">
                                            <div class="col-lg-6">
                                                <button id="signupuser" type="button" class="btn btn-primary btn-block FontSize16">Cancel</button>
                                            </div>
                                        </a>
                                        <div class="col-lg-6">
                                            <button id="signupuser" type="submit" class="btn btn-success btn-block FontSize16">حفظ</button>
                                        </div>
                                    </div>
                                }

                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
    <!-- Matter ends -->

</div>
<script src="~/RichTextEditor/ckeditor.js"></script>

<script>
    //CKEDITOR.inline('Employee_Bio');//inline editing
    CKEDITOR.replace('DescriptionA');
    CKEDITOR.replace('DescriptionE');
    $(document).ready(function () {
        
    });
</script>